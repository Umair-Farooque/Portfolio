{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://portfolio-backend-teqm.onrender.com"
        },
        {
            "source": "/resume_umair.pdf",
            "destination": "/resume_umair.pdf"
        },
        {
            "source": "/((?!api|assets|resume_umair.pdf|ArcSirius).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/resume_umair.pdf",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/pdf"
                },
                {
                    "key": "Content-Disposition",
                    "value": "attachment; filename=\"resume_umair.pdf\""
                }
            ]
        }
    ]
}